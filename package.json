{
  "name": "angular-template",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "clean": "rimraf coverage .angular",
    "build": "pnpm clean && ng build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "ng lint",
    "lint:ci": "ng lint --max-warnings=0",
    "lint:scss": "stylelint \"src/**/*.scss\"",
    "prepare": "husky",
    "start": "ng serve",
    "test": "ng test",
    "test:ui": "ng test --ui",
    "test:coverage": "ng test --coverage --watch=false",
    "watch": "ng build --watch --configuration development"
  },
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "pnpm": {
    "overrides": {
      "qs": ">=6.14.1"
    }
  },
  "dependencies": {
    "@angular/cdk": "21.0.5",
    "@angular/common": "~21.0.0",
    "@angular/compiler": "~21.0.0",
    "@angular/core": "~21.0.0",
    "@angular/forms": "~21.0.0",
    "@angular/material": "21.0.5",
    "@angular/platform-browser": "~21.0.0",
    "@angular/router": "~21.0.0",
    "@fortawesome/angular-fontawesome": "4.0.0",
    "@fortawesome/fontawesome-svg-core": "7.1.0",
    "@fortawesome/free-brands-svg-icons": "7.1.0",
    "@fortawesome/free-regular-svg-icons": "7.1.0",
    "@fortawesome/free-solid-svg-icons": "7.1.0",
    "@ngx-translate/core": "17.0.0",
    "@ngx-translate/http-loader": "17.0.0",
    "rxjs": "7.8.2",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "2.2.0",
    "@angular-eslint/builder": "21.1.0",
    "@angular/build": "~21.0.3",
    "@angular/cli": "~21.0.3",
    "@angular/compiler-cli": "~21.0.0",
    "@angular/platform-browser-dynamic": "21.0.6",
    "@eslint/js": "9.39.1",
    "@stylistic/eslint-plugin": "5.6.1",
    "@trivago/prettier-plugin-sort-imports": "6.0.0",
    "@types/node": "25.0.3",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "angular-eslint": "21.1.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-security": "3.0.1",
    "husky": "9.1.7",
    "jsdom": "27.3.0",
    "lint-staged": "16.2.7",
    "postcss-scss": "4.0.9",
    "prettier": "3.7.4",
    "rimraf": "6.1.2",
    "stylelint": "16.26.1",
    "stylelint-scss": "6.13.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.47.0",
    "vite": "7.3.0",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "4.0.16"
  },
  "lint-staged": {
    "src/**/*.html": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "src/**/*.ts": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "src/**/*.{css,scss,json,md}": [
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --fix"
    ],
    "*.{js,cjs,mjs}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{yaml,yml}": [
      "prettier --write"
    ]
  }
}
